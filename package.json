  "dependencies": {
    "@hapi/hapi": "21.4.0",
    "axios": "1.8.4"
  },
  "devDependencies": {
    "@types/hapi": "^18.0.14",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": "22"
  }
}
