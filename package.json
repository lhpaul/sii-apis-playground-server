{
  "name": "sii-apis-playground-server",
  "version": "0.0.1",
  "main": "dist/main.js",
  "description": "A playground server for SII APIs",
  "scripts": {
    "dev:tsc": "tsc --watch -p .",
    "dev:serve": "nodemon -e js -w lib dist/main.js",
